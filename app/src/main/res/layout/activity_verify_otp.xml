<?xml version="1.0" encoding="utf-8"?>
<layout>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.verifyotp.VerifyOtpActivity">
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="44dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#eef"
        android:layout_marginTop="@dimen/_50sdp"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            android:id="@+id/enterProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_alignBottom="@+id/idEnterCode"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:max="60"
            android:progressBackgroundTint="@android:color/transparent"
            android:progressTint="@color/purple_700" />

        <EditText
            android:id="@+id/idEnterCode"
            android:layout_width="match_parent"
            android:layout_height="44dp"
    android:background="@drawable/otp_block"
            android:backgroundTint="@color/white"
            android:cursorVisible="false"
            android:imeOptions="flagNoFullscreen|actionDone"
            android:inputType="number"
            android:letterSpacing="1.48"
            android:maxLength="6"
            android:text="562377"
            android:padding="5dp"
            android:textIsSelectable="false"
            android:textSize="22dp"
            tools:ignore="SpUsage" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
</layout>